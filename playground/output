#!/bin/bash

function die() {
  echo "$@" >&2
  exit 1
}
set -o pipefail

[ ! -z "$1" ] || die "usage: $0 exp-identifier"

suffix="$2"
[ ! -z "$suffix" ] || suffix=""

e=`eman path $1`
[ -d $e ] || die "Not an experiment: $e"

case "$suffix" in
in )
  e=$(eman path $(eman tb --notree $1 --ign=mert | grep translate))
  fn=corpus.src
  ;;
ref*)
  fn=corpus.reference.$(echo $suffix | cut -d. -f2)
  ;;
"" )
  fn=corpus.translation
esac



out=$e/$fn

[ -e $out ] || die "No output available for $1 $2"

echo $out
